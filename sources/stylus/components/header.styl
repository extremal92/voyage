.header
  z-index: 999;
  background: white;
  width: 100%;
  // &.open
  //   position: fixed;
  &-main
    display: flex
    justify-content: space-between
  &-item
    height 92px
    display flex
    align-items: center
  &-logo
    +below($sm-max)
      justify-content: flex-end
      padding-right: 15px
  &-nav
    justify-content: flex-end
    max-width 600px
    width 100%
    +below($md-max)
      max-width 350px
    +below($sm-max)
      display: none
    &-list
      display: flex
      width 100%
      justify-content: space-between
      +below($md-max )
        flex-wrap: wrap
      &-item
        padding: 3px 15px
        a
          text-decoration: none
          cursor pointer
          color $color_text
          text-transform: uppercase
          font-size: 15px;
          transition: ease-in-out .5s
          &:hover
            color: $color_text_hover
  .burger_nav
    .fa-bars
      display: block;
    .fa-times
      display: none;
    &_icons
      height: 100%;
      font-size: 30px;
      color: $color_text_hover;
      display: flex;
      justify-content: flex-start;
      align-items: center;
      .fa
        cursor pointer
  .burger_nav.open
    .fa-bars
      display: none;
    .fa-times
      display: block;
  .mobile_nav
    position: fixed;
    top: 92px;
    width: 220px;
    background: $site_white
    height: auto;
    padding: 15px 5px;
    z-index: 9;
    &_contacts
      border-top: 1px solid lightgrey
      padding-top: 20px
      display: flex;
      justify-content: flex-start;
      flex-wrap: wrap;
      padding-left: 15px;
      a
        width: 100%;
        color: $color_text_hover
        text-decoration: none!important
        i
          margin-right: 10px;
    &_pages
      &_title
        font-size: 20px
        color: $site_black
      &_list
        padding: 0 !important
        margin: 10px 0;
        width: 100%
        display: flex;
        justify-content: flex-start;
        flex-wrap: wrap;
      &_item
        width: 100%
        a
          color: $site_black
          font-size: 14px;
          padding-left: 10px;
          text-decoration: none!important
          &:hover
            color: $color_text_hover






