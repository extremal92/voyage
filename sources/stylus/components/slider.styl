.banner
	width: 100%
	height: 52.6vw
	position: relative
	+below($min-lg)
		height: 52.6vw
	+below($max-xs)
		height 52.6vw
	&:not(.slick-initialized)
		visibility: hidden;
	&_item
		&_link
			&_image
				height: 52.6vw
				background-size: 100%;
				background-position: center center;
				background-repeat: no-repeat;
				+below($min-lg)
					height: 52.6vw
					background-size: 175%
				+below($max-xs)
					background-size cover
					height 52.6vw
				&_text
					height: auto;
					position: absolute;
					top: 50%;
					transform: translate(-50%, -50%);
					color: white;
					left: 50%;
					// transform: translate(-50%, 0);
					display: flex
					flex-wrap: wrap
					justify-content: center
					align-items: center
					+below(400px)
						display: none
					&_big
						display: block
						font-size: 50px
						font-weight: bold
						width 100%
						text-align: center
						text-transform: uppercase
						+below($sm-max)
							font-size: 25px
					&_small
						display: block
						font-size: 25px
						font-weight: 400
						width 100%
						text-align: center
						+below($sm-max)
							font-size: 15px
				&_btn
					text-transform: uppercase
					font-size: 20px;
					padding: 15px 20px 11px 20px
					border: 2px solid
					border-radius: 4px;
					text-decoration: none!important
					transition: ease-in-out .5s
					margin: 40px 15px 0 15px
					color: $site_white
					+below($sm-max)
						font-size: 14px
						padding: 11px 10px 10px 10px
						margin: 10px 10px 0 10px
					&_big
						background-color: $color_text_hover
						border-color: $color_text_hover
						&:hover
							background-color: transparent
							border-color: $color_text_hover
							color: $color_text_hover
					&_small
						background-color: transparent
						border-color: $site_white
						&:hover
							color: $color_text_hover
							border-color: $color_text_hover
	.slick-dots
		position: absolute
	.slick-arrow
		position: absolute;
		top: calc(50% - 40px);
		margin: 0;
		padding: 0;
		display: flex !important;
		width: 80px;
		height: 80px;
		justify-content: center;
		align-items: center;
		cursor: pointer;
		background: rgba( $site_white , 0.2 )
		border: none;
		z-index: 9
		transition: ease-in-out .6s
		+below($min-sm)
			top 50%
			transform: translate(0, -50%)
			width: 40px;
			height: 40px;
		i
			width: 32px
			height: 32px
			font-size: 32px
			color: $site_white;
		&:hover
			background: $color_text_hover
	.slick-prev
		// left: calc(50% - 555px)
		// +below($min-lg)
		// 	left: 39px
		// +below($min-md)
		// 	left: 15px
		left 0
	.slick-next
		// right: calc(50% - 555px)
		// +below($min-lg)
		// 	right: 39px
		// +below($min-md)
		// 	right: 15px
		right 0
	.slick-dots
		position: absolute;
		bottom: 16px;
		display: flex !important;
		align-items: center;
		justify-content: center;
		width: 100%;
		margin: 0;
		padding: 0;
		li
			width: 10px
			height: 10px
			border: none
			border-radius: 50%
			margin: 0 4px
			background: rgba( $site_white , 1 )
			cursor: pointer;
			button
				display: none
		li.slick-active
			background: rgba( $site_white , 0.2 )
